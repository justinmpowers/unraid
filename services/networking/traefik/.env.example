# Traefik stack configuration
# Copy this to .env and adjust values

TZ=US/Eastern
APPDATA_PATH=/mnt/user/appdata

# Base domain used for routers, e.g. traefik.example.com
DOMAIN=example.com

# Let's Encrypt email
ACME_EMAIL=you@example.com

# Cloudflare DNS-01 challenge token
CLOUDFLARE_DNS_API_TOKEN=your_cloudflare_dns_token_here

# Basic auth for Traefik dashboard (htpasswd format)
# Example: admin:$apr1$H6uskkkW$IgXLP6ewTrSuBkTrqE8wj/
TRAEFIK_DASHBOARD_AUTH=admin:replace_with_htpasswd_hash
# CrowdSec bouncer token
# Generate with: docker compose exec crowdsec cscli bouncers add -n traefik
CROWDSEC_BOUNCER_TOKEN=your_bouncer_token_here